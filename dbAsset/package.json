{
  "name": "API-service",
  "version": "1.0.0",
  "description": "API common service to handle API related functionality",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "prod": "tsc && cp -rv src dist && ts-node src/index.ts",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "build": "tsc",
    "build:watch": "onchange 'src/**/*.ts' -- npm run build",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watchAll",
    "test:exit": "jest --coverage --silent || exit 0",
    "view:coverage": "serve --config serve.json coverage/lcov-report",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "sonar-prod": "npm run sonar && npm run prod"
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "axios-mock-adapter": "^1.19.0",
    "onchange": "^7.0.2",
    "serve": "^11.3.2",
    "ts-jest": "^25.5.1",
    "pg": "^8.5.1",
    "supertest": "^6.0.1",
    "@types/multer": "^1.4.5",
    "sonarqube-scanner": "^2.8.0"
  },
  "dependencies": {
    "@types/express": "^4.17.11",
    "@types/express-pino-logger": "^4.0.2",
    "@types/multer": "^1.4.5",
    "@types/node": "^13.7.1",
    "@types/pg": "^7.14.9",
    "@types/pino": "^6.3.8",
    "@types/uuid": "^8.0.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-pino-logger": "^6.0.0",
    "ibm-cos-sdk": "^1.10.0",
    "jest": "^25.5.4",
    "log4js": "^6.3.0",
    "multer": "^1.4.2",
    "pino": "^6.11.3",
    "pino-pretty": "^4.8.0",
    "ts-node": "^8.6.2",
    "tslint": "^6.1.0",
    "typescript": "^3.7.5",
    "uuid": "^8.2.0",
    "sonarqube-scanner": "^2.8.0"
  }
}
